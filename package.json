{
  "name": "create-shadow-app",
  "version": "0.3.0",
  "description": "Create ShadowJS apps with Vite, TypeScript/JavaScript",
  "author": "Jehaad AL-Johani",
  "homepage": "https://github.com/shadowjs-dev/shadow#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/shadowjs-dev/shadow.git",
    "directory": "packages/create-shadow-app"
  },
  "bugs": {
    "url": "https://github.com/shadowjs-dev/shadow/issues"
  },
  "keywords": [
    "shadowjs",
    "vite",
    "cli",
    "template",
    "typescript",
    "javascript"
  ],
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "create-shadow-app": "./cli.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx}",
    "depcheck": "npx depcheck --ignores @types/*",
    "audit": "npm audit --audit-level moderate",
    "audit:fix": "npm audit fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run typecheck && npm run lint && npm run build",
    "precommit": "npm run lint && npm run typecheck",
    "prepare": "npm run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.9.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.33.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.3.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.40.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
